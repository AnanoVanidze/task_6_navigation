<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomSheetFragment">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/audioTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_baseline_keyboard_voice_24"
        android:drawablePadding="10sp"
        android:paddingHorizontal="16sp"
        android:text="@string/audio"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/cameraTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cameraTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_baseline_camera_alt_24"
        android:drawablePadding="10sp"
        android:paddingHorizontal="16sp"
        android:text="@string/camera"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>